<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_SQL.View.CRUDPage"
             Title="Gestión de Usuarios">
    <VerticalStackLayout Padding="20">

        <!-- Lista de Usuarios -->
        <ListView ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nombre}" Detail="{Binding Correo}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Formulario de Usuario -->
        <Entry Placeholder="Nombre" Text="{Binding SelectedUser.Nombre}" />
        <Entry Placeholder="Apellido Paterno" Text="{Binding SelectedUser.ApellidoPaterno}" />
        <Entry Placeholder="Correo" Text="{Binding SelectedUser.Correo}" />
        <Entry Placeholder="Teléfono" Text="{Binding SelectedUser.Telefono}" />

        <!-- Botones de CRUD -->
        <Button Text="Agregar" Command="{Binding AddUserCommand}" />
        <Button Text="Actualizar" Command="{Binding UpdateUserCommand}" />
        <Button Text="Eliminar" Command="{Binding DeleteUserCommand}" />
        <Button Text="Sincronizar con Servidor" Command="{Binding SyncDataCommand}" />

    </VerticalStackLayout>
</ContentPage>
